{
  "extends": "@zefiros/npm-defaults/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "*": ["./typings/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json",
    "test/**/*.ts",
    "./*.js",
    "src/solver/sat-old.tsx",
    "src/package/gdps.tsx"
  ],
  "exclude": [".vscode", "node_modules"]
}
