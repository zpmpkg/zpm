{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": [
      "esnext.asynciterable",
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],      
      "*": [
        "./typings/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
		"outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,  
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}