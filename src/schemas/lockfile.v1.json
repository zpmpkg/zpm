{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "git": {
      "type": "object",
      "patternProperties": {
        "\\w+": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/GitLock"
          },
          "additionalItems": false
        }
      },
      "additionalProperties": false
    },
    "path": {
      "type": "object",
      "patternProperties": {
        "\\w+": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PathLock"
          },
          "additionalItems": false
        }
      },
      "additionalProperties": false
    },
    "named": {
      "type": "object",
      "patternProperties": {
        "\\w+": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NamedLock"
          },
          "additionalItems": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "git",
    "path",
    "named"
  ],
  "definitions": {
    "GitLock": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^([a-zA-Z0-9_-]{2,50}/[a-zA-Z0-9_-]{2,50})$"
        },
        "version": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        },
        "settings": {
          "type": "object",
          "patternProperties": {
            "\\w+": {}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "version",
        "hash",
        "settings"
      ]
    },
    "NamedLock": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^([a-zA-Z0-9_-]{2,50}(/[a-zA-Z0-9_-]{2,50})?)(:.*)?$"
        },
        "version": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "settings": {
          "type": "object",
          "patternProperties": {
            "\\w+": {}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "version",
        "hash",
        "path",
        "settings"
      ]
    },
    "PathLock": {
      "type": "object",
      "properties": {
        "root": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "settings": {
          "type": "object",
          "patternProperties": {
            "\\w+": {}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "required": [
        "root",
        "path",
        "name",
        "settings"
      ]
    }
  }
}