{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "ManifestOptions": {
    "type": "object",
    "properties": {
      "schema": {
        "type": "string"
      },
      "isBuildDefinition": {
        "type": "boolean"
      },
      "settingsPath": {
        "type": "string"
      },
      "defaults": {
        "\\w+": {}
      }
    }
  },
  "RegistryDefinition": {
    "oneOf": [
      {
        "$ref": "#/definitions/RegistryNamedLocationEntry"
      },
      {
        "$ref": "#/definitions/RegistryPathLocationEntry"
      }
    ]
  },
  "RegistryNamedLocationEntry": {
    "type": "object",
    "properties": {
      "url": {
        "type": "string",
        "pattern": "^(https://.*\\.git)$"
      },
      "branch": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "url"
    ]
  },
  "RegistryPathLocationEntry": {
    "type": "object",
    "properties": {
      "path": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "workingDirectory": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "name",
      "path"
    ]
  },
  "RegistryEntry": {
    "anyOf": [
      {
        "$ref": "#/definitions/RegistryGDGSEntry"
      },
      {
        "$ref": "#/definitions/RegistryGDPSEntry"
      },
      {
        "$ref": "#/definitions/RegistryPDGSEntry"
      },
      {
        "$ref": "#/definitions/RegistryPSSubEntry"
      }
    ]
  },
  "RegistryGDGSEntry": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9_\\-]{2,50}/[a-zA-Z0-9_\\-]{2,50})$"
      },
      "repository": {
        "type": "string",
        "pattern": "^(https://.*\\.git)$"
      },
      "definition": {
        "type": "string",
        "pattern": "^(https://.*\\.git)$"
      }
    },
    "additionalProperties": false,
    "required": [
      "name",
      "repository"
    ]
  },
  "RegistryGDPSEntry": {
    "type": "object",
    "properties": {
      "definition": {
        "type": "string",
        "pattern": "^(https://.*\\.git)$"
      },
      "path": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "definition",
      "path"
    ]
  },
  "RegistryPDGSEntry": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9_\\-]{2,50}/[a-zA-Z0-9_\\-]{2,50})$"
      },
      "repository": {
        "type": "string",
        "pattern": "^(https://.*\\.git)$"
      },
      "definition": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "name",
      "repository",
      "definition"
    ]
  },
  "RegistryPSSubEntry": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "path": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "name"
    ]
  }
}