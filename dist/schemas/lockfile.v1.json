{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "versions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/VersionLock"
            },
            "additionalItems": false
        }
    },
    "additionalProperties": false,
    "required": [
        "versions"
    ],
    "definitions": {
        "VersionLock": {
            "type": "object",
            "properties": {
                "versionId": {
                    "type": "string"
                },
                "packageId": {
                    "type": "string"
                },
                "manifest": {
                    "type": "string"
                },
                "version": {
                    "type": "object",
                    "properties": {
                        "hash": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "hash",
                        "name",
                        "version"
                    ]
                },
                "settings": {
                    "type": "object",
                    "patternProperties": {
                        "\\w+": {}
                    },
                    "additionalProperties": false
                },
                "definition": {
                    "type": "object",
                    "patternProperties": {
                        "\\w+": {}
                    },
                    "additionalProperties": false
                },
                "usedBy": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/UsedByVersion"
                    },
                    "additionalItems": false
                },
                "dependsOn": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "additionalItems": false
                }
            },
            "additionalProperties": false,
            "required": [
                "versionId",
                "packageId",
                "manifest",
                "settings",
                "definition",
                "usedBy"
            ]
        },
        "UsedByVersion": {
            "type": "object",
            "properties": {
                "versionId": {
                    "type": "string"
                },
                "settings": {
                    "type": "object",
                    "patternProperties": {
                        "\\w+": {}
                    },
                    "additionalProperties": false
                },
                "optional": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "required": [
                "versionId",
                "optional"
            ]
        }
    }
}
